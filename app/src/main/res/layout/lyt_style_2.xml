<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:weightSum="10"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/layoutStyle2_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_weight="4"
        android:background="@drawable/card_shadow"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/imgStyle2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvStyle2_1"
            android:layout_alignParentTop="true"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvStyle2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lytSubStyle2_1"
            android:background="@color/half_transparent_white"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/lytSubStyle2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubStyle2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubStyle2_1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/layoutStyle2_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/card_shadow"

            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/imgStyle2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tvStyle2_2"
                android:layout_alignParentTop="true"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tvStyle2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/lytSubStyle2_2"
                android:background="@color/half_transparent_white"
                android:ellipsize="end"
                android:textAlignment="center"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10sdp" />


            <LinearLayout
                android:id="@+id/lytSubStyle2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSubStyle2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubStyle2_2_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutStyle2_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/card_shadow"
            >

            <ImageView
                android:id="@+id/imgStyle2_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tvStyle2_3"
                android:layout_alignParentTop="true"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tvStyle2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/lytSubStyle2_3"
                android:background="@color/half_transparent_white"
                android:ellipsize="end"
                android:textAlignment="center"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10sdp" />


            <LinearLayout
                android:id="@+id/lytSubStyle2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSubStyle2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubStyle2_3_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
